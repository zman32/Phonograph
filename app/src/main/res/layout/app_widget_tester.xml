<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >


    <LinearLayout
        android:id="@+id/media_actions"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/buttonVibrant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vibrant"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonMorevibrant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MoreVibrant"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonDarkvibrant"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dark Vibrant"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/media_actions_two"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/buttonLightmuted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Light Muted"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonMuted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Muted"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonDarkmuted"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dark Muted"
            android:textSize="10sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/clickable_area"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_above="@id/media_actions"
        android:layout_alignParentTop="true"
        android:layout_marginTop="71dp" />


    <LinearLayout


        android:id="@+id/media_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:foreground="@drawable/line_horizontal"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:padding="16dp"
        android:src="@drawable/line_horizontal">


        <TextView
            android:id="@+id/TextForeground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Foreground Text Color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"
            android:textSize="18.5sp"
            android:textStyle="bold"
            tools:text="Background Color" />

        <TextView
            android:id="@+id/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="#a6dce4"
            android:textSize="17sp"

            android:textStyle="bold"
            tools:text="Foreground Text" />


        <TextView
            android:id="@+id/textColortwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|center"
            android:singleLine="true"

            android:textColor="#a6dce4"
            android:textSize="20dp"

            android:textStyle="bold"
            tools:text="Foreground Text two" />

    </LinearLayout>

</RelativeLayout>